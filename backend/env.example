# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=snapcal

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:8081

# Upload Configuration
UPLOAD_PATH=./uploads

# AI Configuration - OpenAI
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4-turbo-2024-04-09
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# Rate Limiting
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Get OpenAI API key from: https://platform.openai.com/api-keys
# 4. Set up your MySQL database and update DB_* variables
# 5. Generate a strong JWT_SECRET (at least 32 characters)
# 6. Update FRONTEND_URL to match your React Native app URL 